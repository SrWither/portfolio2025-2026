---
const projects = [
  {
    title: "GuiFetch",
    desc: "A system information tool with a graphical interface built with C++ and Qt.",
  },
  {
    title: "OpenSpeedRun",
    desc: "An unix livesplit alternative built with Rust and EGui.",
  },
  {
    title: "MeteorNvim",
    desc: "A blazing fast Neovim configuration focused on performance and minimalism.",
  },
];
---

<section class="py-24">
  <h2 class="sr text-4xl font-bold mb-16 text-center text-black dark:text-white">
    Featured Projects
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 sr">
    {
      projects.map(({ title, desc }) => (
        <div class="sr group relative overflow-hidden bg-gray-100/70 dark:bg-linear-to-br dark:from-neutral-900 dark:to-neutral-800 backdrop-blur-sm p-8 rounded-3xl shadow-md border border-zinc-200/40 dark:border-zinc-700/40 hover:shadow-xl hover:-translate-y-2 hover:scale-[1.02] transition-all duration-500">
          <div class="flex flex-col h-full">
            <div class="mb-4">
              <h3 class="text-2xl font-semibold mb-2 text-black dark:text-white group-hover:text-gray-800 dark:group-hover:text-gray-200 transition-colors duration-300">
                {title}
              </h3>
              <div class="h-0.5 w-10 bg-black/60 dark:bg-white/60 rounded-full group-hover:w-16 transition-all duration-500" />
            </div>

            <p class="text-gray-700 dark:text-gray-400 mb-6 leading-relaxed grow">
              {desc}
            </p>
          </div>

          <div class="absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-10 transition-opacity duration-500 bg-linear-to-tr from-white/40 to-transparent dark:from-white/5" />
        </div>
      ))
    }
  </div>
</section>
