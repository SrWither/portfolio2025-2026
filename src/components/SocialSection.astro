---
import { Icon } from 'astro-icon/components'

const contacts = [
  {
    name: "GitHub",
    icon: "github",
    url: "https://github.com/SrWither",
    username: "@SrWither",
  },
  {
    name: "Reddit",
    icon: "reddit",
    url: "https://www.reddit.com/user/SrWither",
    username: "u/SrWither",
  },
  {
    name: "YouTube",
    icon: "youtube",
    url: "https://youtube.com/@SrWitherless",
    username: "@SrWitherless",
  },
  {
    name: "TikTok",
    icon: "tiktok",
    url: "https://www.tiktok.com/@srwitherless",
    username: "@srwitherless",
  },
  {
    name: "Email",
    icon: "mail",
    url: "mailto:fjachuf@gmail.com",
    username: "fjachuf@gmail.com",
  },
];
---

<section class="relative py-40 bg-white dark:bg-black text-black dark:text-white">
  <!-- Fondo plano -->
  <div class="absolute inset-0 bg-white dark:bg-black"></div>

  <!-- DecoraciÃ³n sutil -->
  <div class="absolute -top-40 -left-40 w-[600px] h-[600px] bg-neutral-200/10 dark:bg-white/5 rounded-full blur-3xl"></div>

  <div class="relative z-10 max-w-6xl mx-auto text-center px-6 space-y-20">
    <!-- Header -->
    <div>
      <h2 class="sr text-5xl font-extrabold tracking-tight mb-6">Social</h2>
      <p class="sr text-gray-600 dark:text-gray-400 text-lg max-w-2xl mx-auto leading-relaxed">
        These are my social links if you'd like to follow my work, see what I'm building,
        or just connect with me.
      </p>
    </div>

    <!-- Contact grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-16 justify-items-center items-stretch">
      {contacts.map((contact) => (
        <div class="sr w-[260px]">
          <div
            class="group relative w-full h-full flex flex-col justify-between rounded-3xl overflow-hidden
                   bg-linear-to-br from-neutral-100/70 via-neutral-200/40 to-neutral-300/20
                   dark:from-neutral-900/70 dark:via-neutral-800/50 dark:to-neutral-700/40
                   shadow-lg hover:-translate-y-2
                   hover:shadow-[0_20px_60px_-10px_rgba(0,0,0,0.2)]
                   dark:hover:shadow-[0_20px_60px_-10px_rgba(255,255,255,0.05)]
                   transition-all duration-500"
          >
            <a href={contact.url} target="_blank" rel="noopener noreferrer" class="flex flex-col h-full">
              <div class="p-8 space-y-4 flex flex-col justify-center items-center flex-1">
                <div class="flex justify-center items-center text-4xl mb-4 group-hover:scale-110 transition-transform">
                  <Icon name={contact.icon} />
                </div>
                <h3 class="text-xl font-semibold truncate">{contact.name}</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm truncate">{contact.username}</p>
              </div>

              <!-- Overlay decorativo -->
              <div class="absolute inset-0 bg-linear-to-tr from-white/10 to-transparent dark:from-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Footer -->
    <div class="sr mt-24 border-t border-zinc-200 dark:border-zinc-800 pt-10 text-gray-500 dark:text-gray-400 text-sm">
      <p>
        Or reach me directly at
        <a href="mailto:fjachuf@gmail.com" class="underline hover:text-gray-800 dark:hover:text-gray-200">
          fjachuf@gmail.com
        </a>
      </p>
    </div>
  </div>
</section>
